<li>
<%= image_tag option.image.url(:thumb) %>
<h3> <%= option.description %> </h3>
<p>
<h5> <%= option.score %> </h5>
<div class="btn-group">
	<button class="btn">
		<%= link_to 'Hot', project_option_votes_path(option.project, option, vote: 'up'), :style =>'color: #0099dd', method: :post %>
	</button>
	<button class="btn">
		<%= link_to 'Not', project_option_votes_path(option.project, option, vote: 'down'), :style =>'color: #0099dd', method: :post %>
	</button>
</div>
<%= link_to 'Delete', option,:style =>'color: #0099dd', method: :delete, data: { confirm: 'Are you sure you want to delete this image?' } %>
</p>
</li>