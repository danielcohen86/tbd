<div class="row">
	<div class="span4">
	</div>
	<div class="span4">

<h2>Welcome</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>

<div class="control-group">
  <%= f.email_field :email, :autofocus => true, class: "controls", placeholder: "Email" %>
</div>

 <div class="control-group">
  <%= f.password_field :password, class: "controls", placeholder: "Password" %>
</div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> Remember me</div>
  <% end -%>

  <div><%= f.submit "Sign in", class: "btn signin" %></div>
<% end %>

<%= render "devise/shared/links" %>

<div class="span4">
	</div>
</div>
</div>