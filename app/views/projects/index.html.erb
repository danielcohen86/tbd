<% @projects.each do |project| %>
  <tr>
    <td>
    <div class="media">
        <a class="pull-left">
          <img class="media-object" src="<%= project.options.order('random ()').first.image.url(:small) %>">
        </a>
    </td>
    <td><%= link_to project.title, project %></td>
    <td><%= project.user.email %></td>
    <td><%= project.description %></td>
  </tr>
<% end %>
</table>

