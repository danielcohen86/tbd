<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    I'm making a power move on:<br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    Details on my power move:<br />
    <%= f.text_area :description %>
  </div>
  
  <div>
    <label class="checkbox">
      <%= f.check_box :allow %>
      Allow other people to add ideas?
    </label>
  </div>

  <div class="actions">
    <%= f.submit "Create Power Move", class: 'btn' %>
  </div>

<% end %>
